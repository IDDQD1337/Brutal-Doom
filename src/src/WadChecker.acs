bool HasLumpReading ()
{
	static int cached = -1;
	if(cached != -1)
		return (bool)cached;

	cached = ZC_LumpOpen("DECORATE");
	if(cached)
		ZC_LumpClose(cached);

	return cached = !!cached;//(int)bool(cached);
}
	
int tpic, len, sum, tempTPic = -1;	
	
Script "BD_HashTitlepic" OPEN
{
	
	if (!HasLumpReading()) terminate;

    do
    {
        tpic = tempTPic;
        tempTPic = ZC_LumpOpen("TITLEPIC", tpic);
        ZC_LumpClose(tpic);

    } while(tempTPic != -1);

    tpic = ZC_LumpOpen("TITLEPIC", tpic - 1);

    if(!tpic)
        terminate;

    len = ZC_LumpGetInfo(tpic, LUMP_INFO_SIZE);
    len -= len % 4;

    for(int i = 0; i < len; i += 4)
    {
        sum += ZC_LumpRead(tpic, i, LUMP_READ_INT);
    }

    foreach(let int k, v; WadHash)
    {
        if(sum == v)
        {
            bd_WadCheck = k + 4;
            break;
        }
    }    
    
    
    ZC_LumpClose(tpic);
}

script "BD_TitleMapAndWadHashes" ENTER
{
	if(!GetCvar("bd_showtitlemaphash"))
		terminate;
		Log(x:sum); // returns wad hash#.
		
	if(!GetCvar("bd_showwadhash"))
		terminate;
		Log(d:bd_WadCheck);	
}
